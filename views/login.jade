extends layout

block content
    if login
        block extraHeader
            link(rel='stylesheet', href='/css/flat_login.css')
        .fullscreen_bg
            .container
                form.form-signin.form-inline
                    h1.text-muted.login-title Login
                    .form-group
                        .input-group
                            input.form-control(type='text', placeholder='Usuario')
                            span.input-group-addon
                                span.flaticon-user
                        .input-group
                            input.form-control(type='password', placeholder='Clave')
                            span.input-group-addon
                                span.flaticon-key
                    button.btn.btn-lg.btn-primary.btn-inline
                        div
                            i.flaticon-unlock

block scripts
    script(src='/js/views/login.js')
	script(src='/js/controllers/loginController.js')